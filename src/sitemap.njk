---
permalink: sitemap.xml
eleventyExcludeFromCollections: true
domain: "https://palecek.sk"
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {%- for page in collections.all %}
    {%- if page.data.layout and not page.url.includes('404') and page.data.sitemap !== false %}
    <url>
      {# Použijeme lokálnu premennú domain definovanú vyššie #}
      <loc>{{ domain }}{{ page.url | url }}</loc>
      <lastmod>{{ page.date.toISOString().split('T')[0] }}</lastmod>
    </url>
    {%- endif %}
  {%- endfor %}
</urlset>