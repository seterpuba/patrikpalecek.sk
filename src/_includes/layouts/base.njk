<!doctype html>
<html lang="sk">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{ title }}</title>
  <meta name="description" content="{{ subtitle }}">
  <meta name="robots" content="index,follow">
  <meta name="author" content="Patrik Paleček">
  
  {# Canonical URL je dôležitá pre Google, aby neindexoval duplicity #}
  <link rel="canonical" href="{{ page.url }}">

  <link rel="shortcut icon" type="image/x-icon" href="/images/brand/favicon.png" />

  <link rel="preload" href="/fonts/Bulevar-Regular.otf" as="font" type="font/otf" crossorigin>
  <link rel="preload" href="/fonts/BarlowCondensed-Light.ttf" as="font" type="font/ttf" crossorigin>
  <link rel="preload" href="/fonts/BarlowCondensed-Regular.ttf" as="font" type="font/ttf" crossorigin>
  <link rel="preload" href="/fonts/BarlowCondensed-Medium.ttf" as="font" type="font/ttf" crossorigin>
  <link rel="preload" href="/fonts/BarlowCondensed-SemiBold.ttf" as="font" type="font/ttf" crossorigin>
  <link rel="preload" href="/fonts/BarlowCondensed-Bold.ttf" as="font" type="font/ttf" crossorigin>

  <link rel="stylesheet" href="/css/main.css">

  <meta property="og:site_name" content="Patrik Paleček" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="sk_SK" />
  <meta property="og:title" content="{{ title }}" />
  <meta property="og:description" content="{{ subtitle }}" />
  <meta property="og:url" content="{{ page.url }}" />
  <meta property="og:image" content="/images/brand/patrik-palecek-og.jpg" />
  <meta property="og:image:alt" content="Patrik Paleček - Expert na strategické riadenie financií" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ title }}" />
  <meta name="twitter:description" content="{{ subtitle }}" />
  <meta name="twitter:image" content="/images/brand/patrik-palecek-og.jpg" />

</head>
<body id="{{ id }}">

  {% include "header.njk" %}
  
  <main>
    {{ content | safe }}
  </main>

  <script src="/js/main.js"></script>
</body>
</html>